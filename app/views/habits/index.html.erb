<p id="notice"><%= notice %></p>

<h1>Listing Habits</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Habit1</th>
      <th>Habit2</th>
      <th>Habit3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <td><%= habit.user_id %></td>
        <td><%= habit.habit1 %></td>
        <td><%= habit.habit2 %></td>
        <td><%= habit.habit3 %></td>
        <td><%= link_to 'Show', habit %></td>
        <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
        <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

